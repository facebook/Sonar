{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "flipper": ["./app/src"],
      "flipper-doctor": ["./doctor/src"],
      "flipper-pkg": ["./pkg/src"],
      "live-plugin-manager": ["./types/live-plugin-manager.d.tsx"],
      "flipper-babel-transformer": ["./babel-transformer/src"]
    }
  },
  "include": [
    "src/**/*",
    "doctor/**/*",
    "pkg/**/*",
    "static/**/*",
    "scripts/**/*",
    "types/**/*",
    "headless/**/*",
    "plugins/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
